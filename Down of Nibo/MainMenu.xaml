<Page x:Class="Down_of_Nibo.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Down_of_Nibo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" Width="400">
            <Button FontSize="35" Margin="10" Click="Button_Click">Nová hra</Button>
            <Button Name="Resume_Game" FontSize="35" Margin="10" Click="Button_Click_1" IsEnabled="False" >Pokračovat</Button>
            <Button FontSize="35" Margin="10" Click="Button_Click_2">Ukončit program</Button>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Width="400" Visibility="Hidden" Name="Dificlty">
            <Button FontSize="35" Margin="10" Click="Button_Click_3">Lehká obtížnost</Button>
            <Button FontSize="35" Margin="10" Click="Button_Click_4">normální obtížnost</Button>
            <Button FontSize="35" Margin="10" Click="Button_Click_5">Těžká obtížnost</Button>
        </StackPanel>
    </Grid>
</Page>
